.login-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Change your password
          .panel-body
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
              = f.error_notification
              = f.input :reset_password_token, as: :hidden 
              = f.full_error :reset_password_token
              .form-fields
                = f.input :password, label: false, placeholder: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
                = f.input :password_confirmation, label: false, placeholder: "Confirm password", required: true
              .form-actions
                = f.submit "Change my password",  class: 'btn-lg btn-primary btn-block'
        = render "devise/shared/links"
