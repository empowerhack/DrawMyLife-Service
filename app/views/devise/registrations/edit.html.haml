.login-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2
              Edit #{resource_name.to_s.humanize}
          .panel-body
            = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
              = f.error_notification
              .form-inputs
                = f.input :email, autofocus: true, label: false, placeholder: "Email"
                - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                  %div
                    Currently waiting confirmation for: #{resource.unconfirmed_email}
                = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", placeholder: "Password", required: false, label: false
                = f.input :password_confirmation, required: false, placeholder: "Password Confirmation", label: false
                .form-group
                  = f.input :country, priority: [ "GR", "HU", "RS" ], include_blank: "Select a country", label: false, required: true, class: 'form-control'
                = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, placeholder: "Current password", label: false
              .form-actions
                = f.submit "Update", class: 'btn-lg btn-primary btn-block'
        %h3 Delete my account
        %p
          Want to delete your account?
        = link_to "Back", :back, class: 'btn btn-default'
        = link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default'
